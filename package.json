{
  "name": "linear-cli",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "linear": "./src/cli.tsx"
  },
  "scripts": {
    "dev": "bun run --watch src/cli.tsx",
    "build": "bun build src/cli.tsx --outdir dist --target node",
    "start": "bun run dist/cli.js",
    "link-local": "bun run build && bun link",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "validate:graphql": "bun run scripts/validate-graphql.ts",
    "check": "bun run typecheck && bun run lint && bun run validate:graphql"
  },
  "dependencies": {
    "@linear/sdk": "^28.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "ink": "^5.0.1",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "ora": "^8.1.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/bun": "^1.2.21",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "ink-testing-library": "^4.0.0",
    "react-devtools-core": "^6.1.5",
    "typescript": "^5.5.4",
    "vitest": "^2.1.8"
  }
}
