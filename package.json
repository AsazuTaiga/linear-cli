{
  "name": "@asazutaiga/linear-cli",
  "version": "0.1.0-beta.1",
  "description": "Fast and interactive Linear issue management CLI tool (Community Project)",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "linear": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "linear",
    "cli",
    "issue-tracker",
    "project-management",
    "terminal",
    "productivity"
  ],
  "author": "asazutaiga",
  "license": "MIT",
  "homepage": "https://github.com/asazutaiga/linear-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asazutaiga/linear-cli.git"
  },
  "bugs": {
    "url": "https://github.com/asazutaiga/linear-cli/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun run --watch src/cli.tsx",
    "build": "bun build ./src/cli.tsx --outfile ./dist/cli.js --target node --minify",
    "build:binary": "bun build ./src/cli.tsx --compile --outfile ./dist/linear",
    "start": "bun run dist/cli.js",
    "link-local": "bun run build && chmod +x ./dist/cli.js && bun link",
    "prepublishOnly": "bun run check && bun run build",
    "prepack": "bun run build",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "validate:graphql": "bun run scripts/validate-graphql.ts",
    "check": "bun run typecheck && bun run lint && bun run validate:graphql"
  },
  "dependencies": {
    "@linear/sdk": "^28.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "ink": "^5.0.1",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "ora": "^8.1.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/bun": "^1.2.21",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "ink-testing-library": "^4.0.0",
    "react-devtools-core": "^6.1.5",
    "typescript": "^5.5.4",
    "vitest": "^2.1.8"
  }
}
